});

SubmitMessage.addEventListener("keypress", function(event) {
  // If the user presses the "Enter" key on the keyboard
  if (event.key === "Enter") {
        let  message = SubmitMessage.value;
        SendMessage(message)
        SubmitMessage.value="";
        updateMessages();
  }
});



