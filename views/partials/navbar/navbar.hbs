<div class='header'>

  {{#if userProfile.channelName}}
  <div class='search-bar'>
    <form role='search' method='POST' action='/search'>
      <div class="search-wrapper">
        <input type='text' name='search' placeholder='Search' />
        <a id="filter-btn"> <img id="filter-img" width="20" src="../../images/png/down_white.png"> </img> </a>
      </div>
      <div class="search-filters" >
        <div>
          <input type="checkbox" id="search-title" name="titleFilter">
          <label for="search-title">Title</label>
        </div>
        <div>
          <input type="checkbox" id="search-author" name="authorFilter">
          <label for="search-author">Author</label>
        </div>
        <div>
          <input type="checkbox" id="search-category" name="categoryFilter">
          <label for="search-category">Category</label>
        </div>
        <div>
          <input type="checkbox" id="search-tags" name="tagsFilter">
          <label for="search-tags">Tags</label>
        </div>
          <div>
          <input type="checkbox" id="search-all" name="allFilter">
          <label for="search-all">All</label>
        </div>
      </div>
    </form>
  </div>
  <div class='user-settings'style="cursor: pointer;" >
    <a href="/profile" >
      <img class='user-img' src={{userProfile.profilePic}} alt='profile-pic' />
    </a>
    <div class="dropdown">
      <div class='user-name dropbtn'>{{userProfile.channelName}} <svg viewBox='0 0 492 492' fill='currentColor'>
          <path
            d='M484.13 124.99l-16.11-16.23a26.72 26.72 0 00-19.04-7.86c-7.2 0-13.96 2.79-19.03 7.86L246.1 292.6 62.06 108.55c-5.07-5.06-11.82-7.85-19.03-7.85s-13.97 2.79-19.04 7.85L7.87 124.68a26.94 26.94 0 000 38.06l219.14 219.93c5.06 5.06 11.81 8.63 19.08 8.63h.09c7.2 0 13.96-3.57 19.02-8.63l218.93-219.33A27.18 27.18 0 00492 144.1c0-7.2-2.8-14.06-7.87-19.12z'>
          </path>
        </svg>
      </div>
      <div class="dropdown-content"> 
        <a href="/profile"> <img src="../../images/png/profile.png"> profile </a>
        <a href="/profile/{{userProfile._id}}/accountSettings"> <img src="../../images/png/settings.png">settings</a>
        <a href="/logout"> <img src="../../images/png/logout.png"> logout</a>
      </div>
    </div>

    <div class='notify'>
      <div class='notification'></div>
      <svg viewBox='0 0 24 24' fill='currentColor'>
        <path fill-rule='evenodd' clip-rule='evenodd'
          d='M18.707 8.796c0 1.256.332 1.997 1.063 2.85.553.628.73 1.435.73 2.31 0 .874-.287 1.704-.863 2.378a4.537 4.537 0 01-2.9 1.413c-1.571.134-3.143.247-4.736.247-1.595 0-3.166-.068-4.737-.247a4.532 4.532 0 01-2.9-1.413 3.616 3.616 0 01-.864-2.378c0-.875.178-1.682.73-2.31.754-.854 1.064-1.594 1.064-2.85V8.37c0-1.682.42-2.781 1.283-3.858C7.861 2.942 9.919 2 11.956 2h.09c2.08 0 4.204.987 5.466 2.625.82 1.054 1.195 2.108 1.195 3.745v.426zM9.074 20.061c0-.504.462-.734.89-.833.5-.106 3.545-.106 4.045 0 .428.099.89.33.89.833-.025.48-.306.904-.695 1.174a3.635 3.635 0 01-1.713.731 3.795 3.795 0 01-1.008 0 3.618 3.618 0 01-1.714-.732c-.39-.269-.67-.694-.695-1.173z'>
        </path>
      </svg>
    </div>
  </div>
  {{else}}
  <div class='search-bar'>
    <form role='search' method='POST' action='/search'>
      <input type='text' name='search' placeholder='Search' style='width:40vw;' />
    </form>
  </div>
  <div class='user-settings'>
    <div class="button-wrapper" style="">
      <a class="like" href="/login">
        <img src="../../images/png/login.png" width="30%" style="margin-right:5px">
        Login
      </a>
    </div>

  </div>
  {{/if}}
</div>
<!--Header -->


<script>
    let filterBtn = document.getElementById("filter-btn")
    let filtersDiv = document.querySelector(".search-filters")
    console.log(filterBtn, filtersDiv)
    filterBtn.addEventListener("click", () => {
      if (filtersDiv.style.display == "none") {
        filtersDiv.style.display = "flex";
        document.getElementById("filter-img").src = "../../images/png/up_white.png"
      }
      else {
        filtersDiv.style.display = "none";
        document.getElementById("filter-img").src = "../../images/png/down_white.png"
      }

    });

</script>