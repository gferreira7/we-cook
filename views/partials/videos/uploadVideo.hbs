 
  <div class="main-header anim" style="--delay: 0.5s">
   <button uploadModal> Upload Video</button>
  </div>
 <div id="upload-form" style="display:none" >
  <form id='upload-video' action='/upload' method='post' enctype='multipart/form-data'>
        <div class='modal-body'>
          <div class='input-group mb-3'>
            <span class='input-group-text'>Title</span>
            <input name='title' type='text' class='form-control' placeholder='Video tile' />
          </div>

          <div class='mb-3'>
           <label for='formFile' class='form-label'>Add from device storage</label>
              <input
                class='form-control-file'
                name='video'
                type='file'
                id='formFile'
              />
          </div>
  <label for='formFile' class='form-label'>Add thumbnail from device storage</label>
              <input
                class='form-control-file'
                name='image'
                type='file'
                id='formFile'
              />
       

          <div class='form-text'>OR</div>

          <div class='input-group mb-3'>
            <span class='input-group-text'>Video URL</span>
            <textarea name='url' class='form-control'></textarea>
          </div>


          <div class='input-group mb-3'>
            <span class='input-group-text'>Description</span>
            <textarea name='description' class='form-control'></textarea>
          </div>

          <div class='form-text'>Please make sure you're uploading original
            content
          </div>

        </div>
        <div class='modal-footer'>
          <button class='btn btn-success' data-bs-target='#exampleModalToggle2' data-bs-toggle='modal'
            type='submit'>Upload</button>
        </div>
      </form>

 </div>
 

<script>

window.addEventListener("load", (event) => {
let uploadModal = document.querySelector("button[uploadModal]")
let form = document.getElementById("upload-form")
uploadModal.onclick = ((event) =>{

  if(form.style.display == "none" )
  {
form.style.display = "flex";
  }
 else {
    form.style.display = "none";
  }
form.style.delay = "1s"

})});

</script>


