{{#with userProfile}}

  <div>
    <form
      action='/profile/{{_id}}/accountSettings'
      method='post'
      enctype='multipart/form-data'
    >
      <div class="d-flex justify-content-evenly align-items-center">
        <div left>
          <div>
            <span>Channel Name</span>
            <input name='channelName' type='text' value='{{channelName}}' />
          </div>

          <div>
            <span>Channel Description</span>
            <textarea name='description'>{{{description}}}</textarea>
          </div>

          <div>
            <label for='profilePic'>Profile Picture</label>
            <input name='profilePic' type='file' id='profilePic' />
          </div>
          <div>
            <label for='bannerImage'>Banner Image</label>
            <input name='bannerImage' type='file' id='bannerImage' />
          </div>
        </div>
        <div right>
          <div>Social Media Links:</div>
          <div>
            <span>Instagram</span>
            <input
              name='instagram'
              type='text'
              value='{{socialLinks.instagram}}'
            />
          </div>
          <div>
            <span>Twitter</span>
            <input name='twitter' type='text' value='{{socialLinks.twitter}}' />
          </div>
          <div>
            <span>Facebook</span>
            <input
              name='facebook'
              type='text'
              value='{{socialLinks.facebook}}'
            />
          </div>
          <div>
            <span>Discord</span>
            <input name='discord' type='text' value='{{socialLinks.discord}}' />
          </div>
          <div>
            <span>Youtube</span>
            <input name='youtube' type='text' value='{{socialLinks.youtube}}' />
          </div>
        </div>

      </div>
      <div>
        <button type='submit'>Save Changes</button>
      </div>
    </form>

  </div>

{{/with}}