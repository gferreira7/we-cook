<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <title>{{appTitle}}</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD'
      crossorigin='anonymous'
    />

    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>

    <nav
      class='navbar navbar-expand-md navbar-dark'
      aria-label='Fourth navbar example'
    >
      <div class='container-fluid'>
        <a class='navbar-brand' href='/'>
          <img
            src='images/svg/logo-no-background.svg'
            alt='logo-image'
            class='object-fit-contain'
          /></a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarsExample04'
          aria-controls='navbarsExample04'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>

        <div class='collapse navbar-collapse' id='navbarsExample04'>
          <ul class='navbar-nav me-auto mb-2 mb-md-0'>
            <li class='nav-item'>
              <a
                class='nav-link active'
                aria-current='page'
                href='/profilePage'
              >Profile</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='#'>Settings</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link'>Subscriptions</a>
            </li>
            <li class='nav-item dropdown'>
              <a
                class='nav-link dropdown-toggle'
                href='#'
                data-bs-toggle='dropdown'
                aria-expanded='false'
              >Explore</a>
              <ul class='dropdown-menu'>
                <li><a class='dropdown-item' href='#'>Trending</a></li>
                <li><a class='dropdown-item' href='#'>For you</a></li>
                <li><a class='dropdown-item' href='#'>Show me something new</a></li>

              </ul>
            </li>
            <li class='nav-item'>
              <a class='nav-link'>
                <form action='/logout' method='get'>
                  <button class='btn btn-primary'>LOGOUT
                  </button>
                </form>
            </a>
            </li>
          </ul>
        </div>
        <form role='search' class='m-auto' method="POST" action="/search">
          <input
            class='form-control'
            type='search'
            placeholder='Search'
            aria-label='Search'
            name="search"
          />
        </form>
      </div>
    </nav>

    {{{body}}}

    <script src='/js/script.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN'
      crossorigin='anonymous'
    ></script>
    <script src="https://kit.fontawesome.com/336ada4567.js" crossorigin="anonymous"></script>

  </body>

</html>